{
  "name": "react-validate-framework",
  "version": "0.14.0",
  "description": "React validation framework.",
  "main": "lib/index.js",
  "scripts": {
    "lint": "eslint src config example --ext .js,.jsx --fix",
    "start": "better-npm-run start",
    "test": "mocha --compilers js:babel-core/register --colors ./test/setup.js",
    "build:example": "rimraf build && better-npm-run build:example",
    "deploy": "rimraf lib && better-npm-run prod"
  },
  "betterScripts": {
    "start": {
      "command": "babel-node config/server.dev.js",
      "env": {
        "NODE_ENV": "development",
        "DEBUG": "app:*"
      }
    },
    "build:example": {
      "command": "babel-node config/compile.js",
      "env": {
        "NODE_ENV": "production",
        "DEBUG": "app:*"
      }
    },
    "prod": {
      "command": "babel src --out-dir lib --source-maps --extensions .js,.jsx --copy-files",
      "env": {
        "NODE_ENV": "production",
        "DEBUG": "app:*"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MinJieLiu/react-validate-framework.git"
  },
  "keywords": [
    "react-form",
    "react-validation",
    "react-validate",
    "react-validate-framework"
  ],
  "author": "LMY",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/MinJieLiu/react-validate-framework/issues"
  },
  "homepage": "https://github.com/MinJieLiu/react-validate-framework#readme",
  "dependencies": {
    "lodash": "^4.17.4",
    "prop-types": "^15.5.10",
    "validate-framework-utils": "^0.3.4"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-core": "^6.21.0",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.2.10",
    "babel-polyfill": "^6.23.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-0": "^6.16.0",
    "better-npm-run": "0.0.13",
    "chai": "^3.5.0",
    "classnames": "^2.2.5",
    "css-loader": "^0.26.1",
    "debug": "^2.5.1",
    "enzyme": "^2.8.2",
    "eslint": "^3.12.2",
    "eslint-config-airbnb": "^13.0.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^6.8.0",
    "express": "^4.14.0",
    "file-loader": "^0.9.0",
    "html-webpack-plugin": "^2.24.1",
    "jsdom": "^9.11.0",
    "mocha": "^3.2.0",
    "node-sass": "^4.1.1",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "react-test-renderer": "^15.5.4",
    "rimraf": "^2.5.4",
    "sass-loader": "^4.1.1",
    "style-loader": "^0.13.1",
    "url-loader": "^0.5.7",
    "webpack": "^1.14.0",
    "webpack-dev-middleware": "^1.9.0",
    "webpack-hot-middleware": "^2.13.2"
  },
  "peerDependencies": {
    "react": "0.14.x || 15.x",
    "react-dom": "0.14.x || 15.x"
  }
}
